<form class="was-validated" action="/notes/new-note" method="POST">
    <div class="row">
        <div class="card col-md-4 mx-auto px-0">
            <div class="card-header text-center">
                <h3 class="m-0">New Note</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="note-title" class="text-left">Note title</label>
                    <input type="text" class="form-control is-invalid" id="note-title" autocomplete="off" autofocus required>
                </div>
                <div class="form-group">
                    <label for="note-text" class="text-left">Note text</label>
                    <br>
                    <textarea id="note-text" rows="3" class="form-control is-invalid" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">Save</button>
            </div>
        </div>
    </div>
</form>